<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trahvid</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .language-switch {
            position: absolute;
            top: 10px;
            right: 10px;
        }

            .language-switch a {
                margin-left: 10px;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="navbar-header">
            <h2 class="brand">@Html.ActionLink("Manteeamet", "Index", "Home")</h2>
        </div>
        <ul class="nav">
            <li>@Html.ActionLink("Avaleht", "Index", "Home")</li>
            <li>@Html.ActionLink("Trahvid", "Penalties", "Home")</li>
        </ul>
        @Html.Partial("_LoginPartial")

    </div>
    <div class="language-switch">
        @Html.ActionLink("Eng", "ChangeLanguage", new { lang = "en" })
        @Html.ActionLink("Est", "ChangeLanguage", new { lang = "et" })
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Manteeamet</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
